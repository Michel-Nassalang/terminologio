{% extends 'base.html.twig' %}

{% block title %}Nos Thèmes{% endblock %}

{% block body %}

  <section class="brand_section">
    <div class="container">
      <div class="heading_container mt-5">
        <h2>
          Thèmes d'illustration
        </h2>
      </div>
      <div class="brand_container layout_padding2">
        <div class="box">
          <a href="{{path('app_illustration_theme')}}">
            <div class="new">
              <h5>
                Par défaut
              </h5>
            </div>
            <div class="detail-box">
              <h6 class="price">
                Général
              </h6>
              <h6>
                Définition sans thème
              </h6>
            </div>
          </a>
        </div>
        {% for theme in themes %}
        <div class="box">
          <a href="{{path('app_theme_show', {'id':theme.id})}}">
            <div class="detail-box">
              <h6 class="price">
                {{theme.titre}}
              </h6>
              <h6>
                {{theme.domaine}}
              </h6>
              <p>{{theme.description}}</p>
            </div>
          </a>
        </div>
        {% endfor %}
      </div>
      {% if is_granted('ROLE_MEMBER') %}
      <a href="{{ path('app_theme_new') }}" class="abutton">
        Créer un nouveau thème
      </a>
      <br>
      {% endif %}
      <a href="{{ path('app_index') }}" class="abutton">
        Retour à l'acceuil
      </a>
    </div>
  </section>
  <br>

{% endblock %}
